    <select id="findPage" resultMap="BaseResultMap">
        select
        p.*
        from b_parts p,b_ord_main o where p.f_id = o.id
        and o.ord_sts = 'C'
        and p.sts = 'A'
        and p.attribute = '通用件'
    </select>
    <select id="findPageQc" resultMap="BaseResultMap">
            SELECT DISTINCT
            p.*
        FROM
            b_parts p,
            b_ord_main o
        WHERE
            p.f_id = o.id
        AND (p.attribute = '标准件'
        AND p.sts = 'B'
        AND p.is_buy = '是')
        OR (
            p.attribute = '通用件'
          AND  p.sts = 'B'
            AND o.ord_sts = 'C'
        )
    </select>
    <select id="findPagePr" resultMap="BaseResultMap">
        SELECT
        *
        FROM
        b_parts
        WHERE
        attribute = '标准件'
        AND sts = 'A'
        AND is_buy = '是'
    </select>
